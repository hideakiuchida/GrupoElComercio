@model IEnumerable<WebApplicationBanco.Models.OrdenPagoViewModels>

@{
    ViewBag.Title = "OrdenPagoByMoneda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>OrdenPagoByMoneda</h2>

@using (Html.BeginForm())
{
    <div>
        <table class="table">
            <tr>
                <td><b>Seleccionar Moneda:</b></td>
                <td>@Html.DropDownList("Monedas", ViewData["Monedas"] as IEnumerable<SelectListItem>, "Seleccionar Moneda")</td>
            </tr>
        </table>
    </div>
    <p><input type="submit" value="Buscar" /></p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrdenPagoID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MonedaID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstadoID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaPago)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SucursalID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrdenPagoID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Monto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MonedaID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaPago)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SucursalID)
        </td>
    </tr>

}



</table>
